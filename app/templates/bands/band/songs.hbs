<div class="row">
  <div class="list-group songs">
    {{#if songCreationStarted}}
      <div class="list-group-item song">
  		{{input type="text" class="new-song" placeholder="New Song" value=title}}
  		<button class="btn btn-primary btn-sm new-song-button" disabled={{isAddButtonDiabled}} {{action "createSong"}}>Add</button>
  	 </div>
     {{/if}}
    {{#each model.songs as |song|}}
    <li class="list-group-item">
      {{song.title}}
      {{star-rating item=song rating=song.rating on-click=(action "updateRating")}}
  </li>
  {{/each}}
  {{#if noSongs}}
      <div class="list-group-item empty-list">
        <div class="empty-message">
          There are no songs yet. Why don't you <a href="#" {{action
"enableSongCreation"}}>create one?</a>
        </div>
      </div>
  {{/if}}
</div>
</div>  

